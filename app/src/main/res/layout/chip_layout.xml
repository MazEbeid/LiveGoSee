<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:id="@+id/chip_linear_layout"
    android:background="@drawable/chip_drawable">

<ImageButton
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/chip_image"
    android:background="@drawable/cycle_transport"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="10dp"/>

    <ImageButton
    android:layout_width="30dp"
    android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/delete_chip_button"
    android:background="@drawable/close_white_128"/>


</LinearLayout>