<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="mebeidcreations.apps.livegosee.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/login_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_email"
                android:id="@+id/imageView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_edit_text"
                android:textColor="@color/white"
                android:id="@+id/emailField"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="18dp"
                android:hint="Email"
                android:paddingLeft="10dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_password" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/round_edit_text"
                android:textColor="@color/white"
                android:id="@+id/passwordField"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:ems="10"
                android:paddingLeft="10dp"
                android:hint="Password"

                android:textSize="18dp"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotPasswordLink"
            android:textStyle="bold"
            android:text="@string/forgot_link"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:textSize="15dp"
            android:clickable="true"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/forgotPasswordLink"
            android:text="Login"
            android:layout_margin="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/white_button"
            android:id="@+id/loginButton"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_50sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:id="@+id/create_account_link"
                android:clickable="true"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:layout_marginLeft="10dp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>


