<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mebeidcreations.apps.livegosee.HomeFeedFragment"
    android:id="@+id/main_feed_fragment_layout">



        <android.support.design.widget.TabLayout
            android:id="@+id/explore_fragment_tabLL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:fillViewport="true"
            app:tabIndicatorColor="@color/lgs_yellow"
            app:tabIndicatorHeight="5dp" />


        <android.support.v4.view.ViewPager
            android:id="@+id/explore_fragment_pager"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">


        </android.support.v4.view.ViewPager>


</FrameLayout>