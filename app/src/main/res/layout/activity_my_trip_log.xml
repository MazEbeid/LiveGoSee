<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/side_drawer"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="mebeidcreations.apps.livegosee.MyTripLogActivity"
    android:background="@drawable/felouka_denim">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_frame_layout">

N


        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/main_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="150dp">

                            <ImageView
                                android:id="@+id/selected_trip_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/taj_test" />

                            <ImageButton
                                android:id="@+id/edit_selected_trip_info"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/edit_icon" />

                            <ImageButton
                                android:id="@+id/add_selected_trip_image_button"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/add_photo" />

                            <TextView
                                android:id="@+id/selected_trip_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="India with Nony"
                                android:textColor="@color/white"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="From: "
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/selected_trip_from_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="10dp"
                                android:text="10-Aug-2017"
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="To: "
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/selected_trip_to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="65dp"
                                android:layout_marginTop="10dp"
                                android:text="10-Aug-2017"
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Origin: "
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/selected_trip_origin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="45dp"
                                android:layout_marginTop="10dp"
                                android:text="TEting"
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Destination: "
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/selected_trip_destination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Teting"
                                android:textColor="@color/lgs_purple"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:background="@drawable/bottom_border_box"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginLeft="70dp">

                                <RelativeLayout
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/circle">

                                    <TextView
                                        android:id="@+id/selected_trip_start_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="3 Days"
                                        android:textColor="@color/lgs_purple"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/selected_trip_start_end_stat"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textSize="12dp"
                                    android:text="Trip Starts"
                                    android:textColor="@color/lgs_purple"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp">

                                <RelativeLayout
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/circle">

                                    <TextView
                                        android:id="@+id/selected_trip_duration_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="10 Days"
                                        android:textColor="@color/lgs_purple"
                                        android:textStyle="bold" />

                                </RelativeLayout>

                                <TextView

                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="Trip Duration"
                                    android:textSize="12dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/lgs_purple"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="55dp">

                                <ImageButton
                                    android:id="@+id/selected_trip_map_button"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/center_map_button" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Map"
                                    android:textColor="@color/lgs_tag_yellow"
                                    android:textStyle="bold"
                                    android:textSize="12dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="10dp">

                                <ImageButton
                                    android:id="@+id/selected_trip_add_hotel_button"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_above="@+id/textView8"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/hotel_128" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hotel"
                                    android:textColor="@color/material_red"
                                    android:textStyle="bold"
                                    android:textSize="12dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="55dp">

                                <ImageButton
                                    android:id="@+id/selected_trip_add_transport_button"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/flight_green" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="Transport"
                                    android:textSize="12dp"
                                    android:textColor="@color/lgs_green"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginTop="-2dp">

                                <android.support.v7.widget.SwitchCompat
                                    android:id="@+id/selected_trip_privacy_toggle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:checked="false"
                                    android:shadowColor="@color/lgs_privacy_toggle_text"
                                    android:theme="@style/SwitchStyle" />

                                <TextView
                                    android:id="@+id/selected_trip_privacy_toggle_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="38dp"
                                    android:text="Public"
                                    android:textSize="12dp"
                                    android:textColor="@color/lgs_privacy_toggle_text"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_marginLeft="10dp">

                                <ImageButton
                                    android:id="@+id/delete_selected_trip"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/delete_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:text="Delete"
                                    android:textSize="12dp"
                                    android:textColor="@color/lgs_delete_pink"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </LinearLayout>



                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/log_entries_layout"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal">



                </LinearLayout>

            </LinearLayout>


        </ScrollView>

        <ImageButton
            android:id="@+id/add_event_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right|bottom"
            android:background="@drawable/fab_plus" />

    </FrameLayout>

    <ListView android:id="@+id/side_drawer_list"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:divider="@color/lgs_yellow"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        android:background="@color/transparent"/>
</android.support.v4.widget.DrawerLayout>